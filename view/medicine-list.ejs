<div class="section-header">
    <h1>薬情報一覧</h1>
</div>

<% if (typeof data.success.message !== "undefined") { %>
    <div class="alert alert-success alert-dismissible show fade">
        <div class="alert-body">
            <button class="close" data-dismiss="alert">
                <span>×</span>
            </button>
            <%= data.success.message %>
        </div>
    </div>
<% } %>

<% if (typeof data.error.message !== "undefined") { %>
    <div class="alert alert-danger alert-dismissible show fade">
        <div class="alert-body">
            <button class="close" data-dismiss="alert">
                <span>×</span>
            </button>
            <%= data.error.message %>
        </div>
    </div>
<% } %>

<% if (typeof data.medicine_list !== "undefined") { %>
    <% if (data.medicine_list.length === 0) { %>
        <div class="col-12 mb-4 pl-0 pr-0">
            <div class="hero bg-primary text-white">
                <div class="hero-inner">
                    <p class="lead">
                        登録されている薬情報が見つかりませんでした
                    </p>
                    <div class="mt-4">
                        <a href="/medicine-register" class="btn btn-outline-white btn-lg btn-icon icon-left">
                            <i class="fas fa-plus"></i> 薬情報を登録
                        </a>
                    </div>
                </div>
            </div>
        </div>
    <% } else { %>
        <div class="card">
            <div class="card-header">
                <h4></h4>
                <div class="card-header-action">
                    <a href="<%= data.meta.view_switch %>?style=table"
                       class="btn <% if (data.meta.view_style == 'table') { %> active <% } %>">
                        <i class="fas fa-table" style="padding-right: 5px"></i>テーブル
                    </a>
                    <a href="<%= data.meta.view_switch %>?style=thumbnail"
                       class="btn <% if (data.meta.view_style == 'thumbnail') { %> active <% } %>">
                        <i class="fas fa-grip-horizontal" style="padding-right: 5px"></i>サムネイル
                    </a>
                </div>
            </div>
            <div class="card-body pb-0">
                <% if (data.meta.view_style == 'table') { %>
                    <div class="table-responsive">
                        <table id="medicine-list" class="table table-bordered table-md">
                            <tbody>
                            <tr class="text-center" data-sort-method="none">
                                <th>薬名</th>
                                <th>病院名</th>
                                <th>個数</th>
                                <th>処方日</th>
                                <th>期間</th>
                                <th>種類</th>
                                <th data-sort-method="none"></th>
                                <th data-sort-method="none"></th>
                            </tr>
                            <% for (var t = 0; t < data.medicine_list.length; t++) { %>
                                <tr>
                                    <td><a href="/medicine/<%= data.medicine_list[t]['medicine_id'] %>"><%= data.medicine_list[t]['medicine_name'] %></a></td>
                                    <td><%= data.medicine_list[t]['hospital_name'] %></td>
                                    <td><%= data.medicine_list[t]['number'] %>個</td>
                                    <td><%= data.medicine_list[t]['starts_date'] %></td>
                                    <td><%= data.medicine_list[t]['period'] %>日</td>
                                    <td><%= data.medicine_list[t]['type_name'] %></td>
                                    <td class="text-center">
                                        <button type="button" class="btn btn-primary" onclick="location.href = '/medicine-update/<%= data.medicine_list[t]['medicine_id'] %>'">編集</button>
                                    </td>
                                    <td class="text-center">
                                        <button type="button" class="btn btn-danger" onclick="medicineDelete(<%= data.medicine_list[t]['medicine_id'] %>)">削除</button>
                                    </td>
                                </tr>
                            <% } %>
                            </tbody>
                        </table>
                    </div>
                <% } else if (data.meta.view_style === 'thumbnail') { %>
                    <div class="row">
                        <% for (var i = 0; i < data.medicine_list.length; i++) { %>
                            <div class="col-12 col-sm-6 col-md-6 col-xl-3">
                                <article class="article">
                                    <div class="article-header">
                                        <div class="article-image"
                                             data-background="<% if (data.medicine_list[i]['image'] !== '') { %>/upload/<%= data.medicine_list[i]['image'] %><% } else { } %>">
                                        </div>
                                        <div class="article-title">
                                            <h2>
                                                <a href="/medicine/<%= data.medicine_list[i]['medicine_id'] %>">
                                                    <%= data.medicine_list[i]['medicine_name'] %>
                                                </a>
                                            </h2>
                                        </div>
                                    </div>
                                    <div class="article-details">
                                        <p><%= data.medicine_list[i]['hospital_name'] %></p>
                                        <p><%= data.medicine_list[i]['starts_date'] %> から <%= data.medicine_list[i]['period'] %> 日分</p>
                                        <p>種類：<%= data.medicine_list[i]['type_name'] %></p>
                                        <div class="row">
                                            <div class="col-6">
                                                <a href="/medicine/<%= data.medicine_list[i]['medicine_id'] %>" class="card-link">詳細</a>
                                                <a href="/medicine-update/<%= data.medicine_list[i]['medicine_id'] %>" class="card-link">編集</a>
                                            </div>
                                            <div class="col-6 text-right">
                                                <a href="javascript:medicineDelete(<%= data.medicine_list[i]['medicine_id'] %>)" class="card-link link-danger">削除</a>
                                            </div>
                                        </div>
                                    </div>
                                </article>
                            </div>
                        <% } %>
                    </div>
                <% } %>
            </div>
        </div>
    <% } %>
<% } %>